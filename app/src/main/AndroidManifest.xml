<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wjf.self_demo">

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.modify_phone_state" />
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission
        android:name="android.permission.FORCE_STOP_PACKAGES"
        tools:ignore="ProtectedPermissions" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" /> <!-- Zxing扫描二维码 -->
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" /> <!-- 获取手机号、IMEI、IMSI -->
    <uses-feature android:name="android.hardware.screen.landscape" /> <!-- 允许写手机存储（必须） -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- GUI自动填充验证码功能（非必须） -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- 从短信中读取验证码接口（非必须） -->
    <!-- 获取设备定位信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 短信 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission
        android:name="android.permission.CHANGE_CONFIGURATION"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 拍摄照片和录制视频 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:sharedUserId="android.uid.system"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.BezierActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoadLayoutActivity2">

        </activity>
        <activity android:name=".activity.LoadLayoutActivity" />
        <activity android:name=".activity.FpsFrameActivity">

        </activity>
        <activity android:name=".activity.ConstraintLayoutStateActivity" />
        <activity android:name=".activity.TabActivity" />
        <activity android:name=".activity.HttpActivity" />
        <activity android:name=".activity.PaletteActivity" />
        <activity android:name=".activity.ViewModelActivity" />
        <activity android:name=".activity.DataBindingActivity" />
        <activity android:name=".activity.LiveDataBusActivity" />
        <activity android:name=".activity.LiveDataActivity" />
        <activity android:name=".activity.ViewActivity" />
        <activity android:name=".activity.AccessibilityActivity" />
        <activity android:name=".activity.PhoneCallActivity" />
        <activity android:name=".activity.DemoActivity" />
        <activity android:name=".activity.FishActivity" />
        <activity android:name=".IndexActivity">

        </activity>
        <activity android:name=".activity.MainActivity" />
        <!--
        <service
                    android:name=".util.AccessibilitySampleService"
                    android:enabled="true"
                    android:exported="true"
                    android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
                    <intent-filter>
                        <action android:name="android.accessibilityservice.AccessibilityService" />
                    </intent-filter>

                    <meta-data
                        android:name="android.accessibilityservice"
                        android:resource="@xml/accessibility_config" />
                </service>
        -->
        <receiver android:name=".util.ClockBroadcastReceiver">
            <intent-filter>
                <action android:name="wjf.self.clock"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name=".receiver.AdminReceiver"
            android:description="@string/device_admin_description"
            android:label="@string/device_admin"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".util.AccessibilityClockService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_clock_config" />
        </service>
    </application>

</manifest>