<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activity.BezierActivity">

        <com.wjf.self_library.view.codingUI.CommonToolbar
            android:id="@+id/commonToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:background_color="@color/color_yellow"
            app:titleText="贝塞尔曲线">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/confirmBtn"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="确认" />

                <Button
                    android:id="@+id/anim"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="动画" />
            </LinearLayout>
        </com.wjf.self_library.view.codingUI.CommonToolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SX" />

                <EditText
                    android:id="@+id/startPointX"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SY" />

                <EditText
                    android:id="@+id/startPointY"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EX" />

                <EditText
                    android:id="@+id/endPointX"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EY" />

                <EditText
                    android:id="@+id/endPointY"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∠↑" />

                <EditText
                    android:id="@+id/angleUp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∠↓" />

                <EditText
                    android:id="@+id/angleDown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·↑" />

                <EditText
                    android:id="@+id/lineUp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·↓" />

                <EditText
                    android:id="@+id/lineDown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="number"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>


        <com.wjf.loadLayout.bezier.BasicPathView2
            android:id="@+id/basic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" />


    </LinearLayout>
</layout>
