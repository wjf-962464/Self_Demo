<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

        <com.wjf.self_library.view.codingUI.CommonToolbar
            android:id="@+id/commonToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backText="返回"
            app:background_color="@color/color_yellow"
            app:dark_theme="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleText="标题" />

        <com.wjf.self_demo.view.FlowListView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/commonToolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/radius_text"
                android:text="略略略"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_text"
                android:text="红霉素眼膏"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_text"
                android:text="克林霉素"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_text"
                android:text="第八个工作室"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_text"
                android:text="Debug工作室"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_text"
                android:text="盐酸左氧氟沙星"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_text"
                android:text="略略略2"
                android:textSize="15sp" />
        </com.wjf.self_demo.view.FlowListView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>