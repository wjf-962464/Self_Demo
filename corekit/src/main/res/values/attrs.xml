<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--标题栏-->
    <declare-styleable name="CommonToolbar">
        <attr name="dark_theme" format="boolean" />
        <attr name="if_back" format="boolean" />
        <attr name="titleText" format="string" />
        <attr name="backText" format="string" />
        <attr name="background_color" format="color" />
        <attr name="background_change_color" format="color" />
    </declare-styleable>
    <!--矢量图片换色-->
    <declare-styleable name="ColorImage">
        <attr name="img_color" format="color" />
    </declare-styleable>

    <declare-styleable name="Icon">
        <attr name="icon_src" format="reference" />
        <attr name="icon_text_selected" format="reference|color" />
        <attr name="color_normal" format="reference|color" />
        <attr name="color_selected" format="reference|color" />
        <attr name="icon_size" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="icon_text" format="string" />
        <attr name="icon_text_margin" format="dimension" />
        <attr name="icon_position" format="enum">
            <enum name="top" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="left" value="3" />
        </attr>
    </declare-styleable>


    <declare-styleable name="StatusBarHeightView">
        <attr name="use_type" format="integer">
            <enum name="use_height" value="0" />
            <enum name="use_padding_top" value="1" />
        </attr>
    </declare-styleable>

    <!--    <declare-styleable name="Icon">
            <attr name="icon_src" format="reference" />
            <attr name="icon_text_selected" format="reference|color" />
            <attr name="color_normal" format="reference|color" />
            <attr name="color_selected" format="reference|color" />
            <attr name="icon_size" format="dimension" />
            <attr name="text_size" format="dimension" />
            <attr name="icon_text" format="string" />
            <attr name="icon_text_margin" format="dimension" />/>
        </declare-styleable>-->

    <declare-styleable name="EllipsizeTextView">
        <attr name="ellipsize_max" format="integer" />
        <attr name="ellipsize_mode" format="enum">
            <enum name="end" value="0x01" />
            <enum name="none" value="0x02" />
        </attr>
    </declare-styleable>


    <attr name="round_as_circle" format="boolean" />
    <attr name="round_corner" format="integer|dimension" />
    <attr name="round_corner_bottom" format="integer|dimension" />
    <attr name="round_corner_bottom_left" format="integer|dimension" />
    <attr name="round_corner_bottom_right" format="integer|dimension" />
    <attr name="round_corner_left" format="integer|dimension" />
    <attr name="round_corner_right" format="integer|dimension" />
    <attr name="round_corner_top" format="integer|dimension" />
    <attr name="round_corner_top_left" format="integer|dimension" />
    <attr name="round_corner_top_right" format="integer|dimension" />
    <attr name="round_stroke_color" format="color|reference" />
    <attr name="round_stroke_width" format="integer|dimension" />
    <declare-styleable name="RoundHelper">
        <attr name="round_as_circle" />
        <attr name="round_corner" />
        <attr name="round_corner_top_left" />
        <attr name="round_corner_left" />
        <attr name="round_corner_top" />
        <attr name="round_corner_right" />
        <attr name="round_corner_bottom" />
        <attr name="round_corner_top_right" />
        <attr name="round_corner_bottom_left" />
        <attr name="round_corner_bottom_right" />
        <attr name="round_stroke_color" />
        <attr name="round_stroke_width" />
    </declare-styleable>
    <declare-styleable name="RoundConstraintLayout">
        <attr name="round_as_circle" />
        <attr name="round_corner" />
        <attr name="round_corner_top_left" />
        <attr name="round_corner_left" />
        <attr name="round_corner_top" />
        <attr name="round_corner_right" />
        <attr name="round_corner_bottom" />
        <attr name="round_corner_top_right" />
        <attr name="round_corner_bottom_left" />
        <attr name="round_corner_bottom_right" />
        <attr name="round_stroke_color" />
        <attr name="round_stroke_width" />
    </declare-styleable>
</resources>