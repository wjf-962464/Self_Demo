<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Dialog从底部进入退出动画-->
    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <!--        弹入动画-->
        <item name="android:windowEnterAnimation">@anim/common_dialog_in_anim</item>
        <!--        弹出动画-->
        <item name="android:windowExitAnimation">@anim/common_dialog_out_anim</item>
    </style>
    <!--Dialog全屏样式-->
    <style name="FullScreenDialogStyle" parent="@android:style/Theme.Holo.Dialog">
        <!-- 是否有边框 -->
        <item name="android:windowFrame">@null</item>
        <!--是否在悬浮Activity之上  -->
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="BaseDialogTheme" parent="@style/StyleBaseTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="StyleBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--<item name="statusBarTheme"></item>-->
        <item name="android:windowBackground">@color/black_alpha_50</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!--设置Button普通状态的颜色-->
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <!--设置控件的焦点状态的颜色和普通状态的颜色-->
        <item name="colorControlHighlight">@color/black_alpha_30</item>
        <item name="android:typeface">sans</item>
    </style>
    <declare-styleable name="EllipsizeTextView">
        <attr format="integer" name="ellipsize_max" />
        <attr format="enum" name="ellipsize_mode">
            <enum name="end" value="0x01" />
            <enum name="none" value="0x02" />
        </attr>
    </declare-styleable>


    <attr format="boolean" name="round_as_circle"/>
    <attr format="integer|dimension" name="round_corner"/>
    <attr format="integer|dimension" name="round_corner_bottom"/>
    <attr format="integer|dimension" name="round_corner_bottom_left"/>
    <attr format="integer|dimension" name="round_corner_bottom_right"/>
    <attr format="integer|dimension" name="round_corner_left"/>
    <attr format="integer|dimension" name="round_corner_right"/>
    <attr format="integer|dimension" name="round_corner_top"/>
    <attr format="integer|dimension" name="round_corner_top_left"/>
    <attr format="integer|dimension" name="round_corner_top_right"/>
    <attr format="color|reference" name="round_stroke_color"/>
    <attr format="integer|dimension" name="round_stroke_width"/>
    <declare-styleable name="RoundHelper">
        <attr name="round_as_circle"/>
        <attr name="round_corner"/>
        <attr name="round_corner_top_left"/>
        <attr name="round_corner_left"/>
        <attr name="round_corner_top"/>
        <attr name="round_corner_right"/>
        <attr name="round_corner_bottom"/>
        <attr name="round_corner_top_right"/>
        <attr name="round_corner_bottom_left"/>
        <attr name="round_corner_bottom_right"/>
        <attr name="round_stroke_color"/>
        <attr name="round_stroke_width"/>
    </declare-styleable>
    <declare-styleable name="RoundConstraintLayout">
        <attr name="round_as_circle"/>
        <attr name="round_corner"/>
        <attr name="round_corner_top_left"/>
        <attr name="round_corner_left"/>
        <attr name="round_corner_top"/>
        <attr name="round_corner_right"/>
        <attr name="round_corner_bottom"/>
        <attr name="round_corner_top_right"/>
        <attr name="round_corner_bottom_left"/>
        <attr name="round_corner_bottom_right"/>
        <attr name="round_stroke_color"/>
        <attr name="round_stroke_width"/>
    </declare-styleable>
</resources>